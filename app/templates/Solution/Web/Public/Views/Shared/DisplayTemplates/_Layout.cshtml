@if (this.ViewData.ModelMetadata.HideSurroundingHtml) {
	@(this.RenderBody())
} else { 	
	<div class="form-group">
		@if (@IsSectionDefined("Label")) {
			@(this.RenderSection("Label", true))
		} else {
			<label class="col-md-2 col-lg-3 control-label">@(this.Html.DisplayNameForModel())</label>
		}

	    <div class="col-md-10 col-lg-9">
			<p class="form-control-static">@(this.RenderBody())</p>
		</div>
	
		@if (!String.IsNullOrEmpty(this.ViewData.ModelMetadata.Description)) {
			<span data-toggle="tooltip" data-placement="right" data-original-title="@(this.ViewData.ModelMetadata.Description)"><i class="icon-info-sign"></i></span>
		}
	</div>	
}
