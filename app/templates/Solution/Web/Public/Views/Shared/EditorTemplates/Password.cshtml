@model string
@{
	this.Layout = "~/Views/Shared/EditorTemplates/_Layout.cshtml";
}
@if (this.ViewData.ModelMetadata.IsReadOnly) {
	@(this.Html.Password("", this.ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control", disabled = "disabled" }))
} else {
	@(this.Html.Password("", this.ViewData.TemplateInfo.FormattedModelValue, new { @class = "form-control", placeholder = this.ViewData.ModelMetadata.Watermark }))
}
